{
	"id": "fabula",
	"title": "Fabula Ultima TTJRPG (Unofficial)",
	"description": "An Unofficial system for playing Fabula Ultima in the Foundry Virtual Tabletop environment.",
	"version": "0.0.3",
	"authors": [
		{
			"name": "OmegaPrime",
			"discord": "0mega_prime"
		},
		{
			"name": "Bog27",
			"discord": "Bog"
		}
	],
	"compatibility": {
		"minimum": "12",
		"verified": "12",
		"maximum": "12"
	},
	"esmodules": ["module/fabula.mjs"],
	"styles": ["assets/css/fabula.css"],
	"packs": [
		{
			"name": "classes",
			"label": "Classi",
			"type": "Item",
			"system": "fabula",
			"path": "packs/classes",
			"ownership": {
				"PLAYER": "OBSERVER",
				"ASSISTANT": "OWNER"
			}
		}
	],
	"languages": [
		{
			"lang": "it",
			"name": "Italiano",
			"path": "lang/it.json"
		}
	],
	"relationships": {
		"requires": [
			{
				"id": "socketlib",
				"type": "module"
			}
		]
	},
	"flags": {
		"hotReload": {
			"extensions": ["css", "hbs", "json"],
			"paths": ["css", "lang", "templates"]
		}
	},
	"socket": true,
	"readme": "README.md",
	"url": "https://github.com/MirkoPesenti/foundryvtt-fabula-ultima-ttjrpg-unoffical"
}