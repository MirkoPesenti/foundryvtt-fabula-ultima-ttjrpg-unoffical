<li class="{{item.system.sourcebook}}">
	<div class="btn-container">
		{{#if @root.editable}}
			{{#unless item.system.isEquipped}}
				<button type="button" class="btn-action-edit js_editItem" data-itemid="{{item._id}}" data-tooltip="{{localize 'FU.actions.edit'}}">
					<i class="fa fa-pencil m-0"></i>
				</button>
				<button type="button" class="btn-action-delete js_deleteItem" data-itemid="{{item._id}}" data-tooltip="{{localize 'FU.actions.delete'}}">
					<i class="fa fa-trash m-0"></i>
				</button>
			{{else}}
				<button type="button" class="btn-action-equip equip js_equipItem" data-itemid="{{item._id}}" data-tooltip="{{localize 'FU.actions.equip'}}">
					<div class="icon icon-equip-action"></div>
				</button>
			{{/unless}}
		{{/if}}
	</div>
	<div class="item-box">
		<div class="item-box-data">
			{{#if @root.editable}}
				<button type="button" class="btn-action-showchat js_showItemInChat" data-itemid="{{item._id}}" data-tooltip="{{localize 'FU.actions.showInChat'}}">
					<i class="fa fa-comment m-0"></i>
				</button>
				<button type="button" class="btn-action-roll name js_rollActorItem" data-itemid="{{item._id}}" data-primary="{{item.system.precisionAttributes.primary.value}}" data-secondary="{{item.system.precisionAttributes.secondary.value}}" data-tooltip="{{localize 'FU.actions.attack'}}">
					{{item.name}}
					{{#if item.system.isMartial.value}}
						<div class="martial-icon" data-tooltip="{{localize 'TYPES.Item.martialItem'}}">l</div>
					{{/if}}
					<div class="icon icon-{{item.system.range}}" data-tooltip="{{localize (concat 'FU.WeaponRanges.' item.system.range)}}"></div>
				</button>
			{{else}}
				
			{{item.name}}
			<div class="icon icon-{{item.system.range}}" data-tooltip="{{localize (concat 'FU.WeaponRanges.' item.system.range)}}"></div>
				
			{{/if}}
			<strong class="m-0">
				【{{localize (concat 'FU.attributesAbbr.' item.system.precisionAttributes.primary.value)}} + {{localize (concat 'FU.attributesAbbr.' item.system.precisionAttributes.secondary.value)}}】{{#gt (add item.system.precisionBonus actor.level.checkBonus.test) 0}}+{{/gt}}
				{{#unless (eq (add item.system.precisionBonus actor.level.checkBonus.test) 0)}}
					{{add item.system.precisionBonus actor.level.checkBonus.test}}
				{{/unless}}
			</strong>

			<div class="divider-decoration {{#if (eq (add item.system.precisionBonus actor.level.checkBonus.test) 0)}}ml-0{{/if}}"></div>

			<strong>【TM{{#gt (add item.system.damage.value actor.level.damageBonus actor.bonus.damage.base) 0}} + {{add item.system.damage.value actor.level.damageBonus actor.bonus.damage.base}}{{/gt}}】</strong>danni da&nbsp;<strong>{{localize (concat 'FU.DamageTypes.' item.system.damage.type.value)}}</strong>
		</div>
		

		<div class="item-box-description">
			<div class="weapon-category">
				<strong>{{localize (concat 'FU.weaponCategories.' item.system.type)}}</strong>
				<div class="divider-decoration"></div>
				<div class="text">{{{item.enrichedHtml.description}}}</div>
			</div>
		</div>
	</div>
</li>