<form class="{{cssClass}} {{item.type}} flexcol" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="100" width="100"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'FU.Item.name'}}"/></h1>
            {{!-- <div class="resources grid grid-2col">
				RISORSE
			</div>
            <div class="abilities grid grid-3col">
				ABILITA'
			</div> --}}
        </div>
    </header>

    {{!-- <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="items">Items</a>
    </nav> --}}

    <section class="sheet-body">
        <table>
            <thead>
                <tr>
                    <th>{{localize 'FU.project.potency'}}</th>
                    <th>{{localize 'FU.project.area'}}</th>
                    <th>{{localize 'FU.project.uses'}}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select name="system.project.potency">
                        {{#select system.project.potency}}
                            {{#each config.projectPotency as |name potency|}}
                            <option value="{{potency}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                        </select>
                    </td>
                    <td>
                        <select name="system.project.area">
                        {{#select system.project.area}}
                            {{#each config.projectArea as |name area|}}
                            <option value="{{area}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                        </select>
                    </td>
                    <td>
                        <select name="system.project.uses">
                        {{#select system.project.uses}}
                            {{#each config.projectUses as |name uses|}}
                            <option value="{{uses}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
</form>