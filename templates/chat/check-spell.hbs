<div class="dice-roll">
	<div class="dice-description">
		<div class="title">
			{{item.name}}
			{{#if item.system.isOffensive.value}}
				<div class="icon icon-offensive"></div>
			{{/if}}
		</div>
		<div class="attributes">
			【{{localize (concat 'FU.attributesAbbr.' item.system.attributes.primary.value)}} + {{localize (concat 'FU.attributesAbbr.' item.system.attributes.secondary.value)}}】
			{{#gt roll.data.level.checkBonus 0}}
				+ {{roll.data.level.checkBonus}}
			{{/gt}}
		</div>
		<div class="description">
			{{{item.system.description}}}
		</div>
	</div>
	<div class="dice-result">
		<div class="dice-formula">{{roll.formula}}</div>
		<div class="dice-tooltip">
			{{#each roll.dice as |dice diceIndex|}}
				<section class="tooltip-part">
					<div class="dice">
						<header class="part-header flexrow">
							<span class="part-formula">{{dice.number}}d{{dice.faces}}</span>
							<button type="button" class="part-total js_rerollDice" data-roll="{{dice.number}}d{{dice.faces}}" data-tooltip="Invoca un tratto per ritirare il dado">
								<i class="fa fa-rotate m-0"></i>
							</button>
						</header>
						<ol class="dice-rolls">
							{{#each dice.results}}
								<li class="roll die d{{dice.faces}}{{#if ../../crit.failure}} min{{/if}}{{#if ../../crit.success}} max{{/if}}">
									{{this.result}}
								</li>
							{{/each}}
						</ol>
					</div>
				</section>
			{{/each}}
		</div>
		<h4 class="dice-total{{#if crit.success}} success{{/if}}{{#if crit.failure}} failure{{/if}}">{{roll.total}}</h4>
	</div>
	{{#if item.system.damage.hasDamage.value}}
		<div class="dice-damage">
			<div class="damage-type">
				<strong>【TM + {{item.system.damage.value}}】</strong> danni da 
				<strong>
					{{#unless (eq item.system.damage.type.value '')}}
						{{localize (concat 'FU.DamageTypes.' item.system.damage.type.value)}}
					{{else}}
						(a scelta)
					{{/unless}}
				</strong>
			</div>
			<div class="dice-total">{{add highRoll item.system.damage.value}}</div>
		</div>
	{{/if}}
	{{#allTrue crit.success item.system.opportunity.value}}
		<div class="dice-opportunity">
			<span>Opportunità:</span>
			{{{item.system.opportunityEffect}}}
		</div>
	{{/allTrue}}
</div>